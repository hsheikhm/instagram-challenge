<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div><%= image_tag post.image.url(:medium) %>
      <span class="likes_count"> <%= post.likes.count %> </span> <%= 'like'.pluralize(post.likes.count) %>
      <% if post.comments.any? %>
        <ul>
          <% post.comments.each do |comment| %>
            <li>
              <%= comment.thoughts %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>No comments.</p>
      <% end %>
      <%= link_to "Like", post_likes_path(post), class: 'likes-link' %>
      <%= form_for [post, @comment] do |f| %>
      <%= f.label :thoughts %>
      <%= f.text_area :thoughts %>
      <%= f.submit "Leave Comment" %>
      <% end %>
    </div>
  <% end %>
<% else %>
  No images posted yet
<% end %>

<%= link_to "Make a Post", new_post_path %>
