<section class="posts-section">
  <div class="posts-div">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
      <article class="each-post">
        <header class="post-header">
          <%= image_tag post.user.image.url(:thumb), class: 'post-user-image' %>
          <div class="post-user-username">
            <%= post.user.username %>
          </div>
        </header>




        <p><strong><%= post.title %> by: <%= post.user.username %></strong></p>
        <p><%= time_ago_in_words(post.time) + ' ago' %></p>
        <div><%= image_tag post.image.url(:medium) %>
          <br>
        <span class="likes_count"> <%= post.likes.count %> </span> <%= 'like'.pluralize(post.likes.count) %>
          <% if post.comments.any? %>
            <ul>
              <% post.comments.each do |comment| %>
                <li>
                  <%= comment.thoughts %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No comments.</p>
          <% end %>
          <%= link_to post_likes_path(post), class: 'likes-link' do %>
              <i class="glyphicon glyphicon-heart"></i>
          <% end %>
          <%= form_for [post, @comment] do |f| %>
          <%= f.label :thoughts %>
          <%= f.text_area :thoughts %>
          <%= f.submit "Leave Comment" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
      </article>
  </div>
</section>
