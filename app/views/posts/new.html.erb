<% if @post.errors.any? %>
  <section id="errors" >
    <h3> <%= pluralize(@post.errors.count, "error") %> prohibited this post from being submitted: </h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_for @post, url: posts_path, html: {multipart: true} do |f| %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit "Post Image" %>
<% end %>
