<main class="main-sign-up">
  <article class="main-article">
    <div class="iphone-section">
      <img class="iphone-image" src="//instagramstatic-a.akamaihd.net/h1/images/homepage/screenshot4.jpg/2db50f7f967f.jpg">
    </div>
    <div class="login-form">
      <div class="login-container">
        <h1 class="login-instagram-logo">Instagram</h1>
        <div class="login-fields">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f| %>
              <div class="login-text-field">
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'email-text-field' %>
              </div>
              <div class="login-text-field">
                <%= f.text_field :username, autofocus: true, placeholder: "Username", class: 'email-text-field' %>
              </div>
              <div class="login-text-field">
                <%= f.label "Profile Image", class: "profile-image-label" %><br />
                <%= f.file_field :image, placeholder: "Profile Image", class: 'email-text-field' %>
              </div>
              <div class="login-text-field">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'password-text-field' %>
              </div>
              <div class="login-text-field">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", id: 'passwordconf-text-field' %>
              </div>
                <%= f.submit "Sign up", class: 'login-button' %>
            <% end %>
        </div>
      </div>
    </div>
  </article>
</main>
